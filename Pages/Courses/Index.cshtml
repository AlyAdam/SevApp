@page
@model SevStudentsApp.Pages.Courses.IndexModel
@{
}
 <h2>List of Courses</h2>
    <a class="btn btn-primary btn-sm" href="/Courses/Create">New Course</a>
    <table class="table">
                <thead>
                <tr>
                     <th>Id</th>
                     <th>Description</th>
                     <th>Teacher_id</th>
                </tr>
                </thead>
                <tbody>
        @if (Model.courses is not null)
        {
            @foreach (var course in Model.courses)
            {
                                <tr>
                                    <td>@course.Id</td>
                                    <td>@course.Description</td>
                                    <td>@course.Teacher_id</td>
                                    <td>

                                    <a class="btn btn-primary btn-sm" href="/Courses/Update?id=@course.Id">Update</a>
                                    <a class="btn btn-primary btn-sm" href="/Courses/Delete?id=@course.Id">Delete</a>                                  
                                    </td>

                                </tr>
    }
}

          </tbody>
    </table>




